/*
 * combine two %typename%s by applying PGFunction mergefunc on values where key match
 * if PGFunction miss1func is not NULL values for keys which doesn't exists on
 * first istore is added to the result by applying miss1func to the value
 * while values for keys which doesn't exists on second istore will be added without
 * change.
 * if PGFunction miss1func is NULL the result will only contain matching keys
 */
%typename% *
%funcprefix%_merge(%typename% *arg1, %typename% *arg2, PGFunction mergefunc, PGFunction miss1func)
{
    %typename% *     result;
    %typename%Pair * pairs1, *pairs2;
    %typename%Pairs *creator = NULL;
    int             index1 = 0, index2 = 0;

    pairs1  = FIRST_PAIR(arg1, %typename%Pair);
    pairs2  = FIRST_PAIR(arg2, %typename%Pair);
    creator = palloc0(sizeof *creator);

    %funcprefix%_pairs_init(creator, MIN(arg1->len + arg2->len, 200));

    while (index1 < arg1->len && index2 < arg2->len)
    {
        if (pairs1[index1].key < pairs2[index2].key)
        {
            if (miss1func != NULL)
                %funcprefix%_pairs_insert(creator, pairs1[index1].key, pairs1[index1].val);
            ++index1;
        }
        else if (pairs1[index1].key > pairs2[index2].key)
        {
            if (miss1func != NULL)
                %funcprefix%_pairs_insert(creator, pairs2[index2].key, DirectFunctionCall1(miss1func, pairs2[index2].val));
            ++index2;
        }
        else
        {
            if (mergefunc != NULL)
                %funcprefix%_pairs_insert(
                  creator, pairs1[index1].key, DirectFunctionCall2(mergefunc, pairs1[index1].val, pairs2[index2].val));
            else
                %funcprefix%_pairs_insert(creator, pairs1[index1].key, pairs2[index2].val);
            ++index1;
            ++index2;
        }
    }

    if (miss1func != NULL)
    {
        while (index1 < arg1->len)
        {
            %funcprefix%_pairs_insert(creator, pairs1[index1].key, pairs1[index1].val);
            ++index1;
        }

        while (index2 < arg2->len)
        {
            %funcprefix%_pairs_insert(creator, pairs2[index2].key, DirectFunctionCall1(miss1func, pairs2[index2].val));
            ++index2;
        }
    }

    FINALIZE_%macropostfix%(result, creator);

    return result;
}

/*
 * apply PGFunction applyfunc on each value of arg1 with arg2
 */
%typename% *
%funcprefix%_apply_datum(%typename% *arg1, Datum arg2, PGFunction applyfunc)
{
    %typename% *     result;
    %typename%Pair * pairs;
    %typename%Pairs *creator = NULL;
    int             index   = 0;

    pairs   = FIRST_PAIR(arg1, %typename%Pair);
    creator = palloc0(sizeof *creator);

    %funcprefix%_pairs_init(creator, arg1->len);
    while (index < arg1->len)
    {
        %funcprefix%_pairs_insert(creator, pairs[index].key, DirectFunctionCall2(applyfunc, pairs[index].val, arg2));
        ++index;
    }
    FINALIZE_%macropostfix%(result, creator);

    return result;
}

