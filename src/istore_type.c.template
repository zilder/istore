PG_FUNCTION_INFO_V1(%funcprefix%_seed);
Datum %funcprefix%_seed(PG_FUNCTION_ARGS)
{

    %typename% *result;

    %typename%Pairs *creator = NULL;

    int from, up_to, fill_with, index1 = 0;

    if (PG_ARGISNULL(0) || PG_ARGISNULL(1))
        PG_RETURN_NULL();

    from      = PG_GETARG_INT32(0);
    up_to     = PG_GETARG_INT32(1);
    fill_with = PG_GETARG_INT64(2);
    creator   = palloc0(sizeof *creator);

    if (up_to < from)
        elog(ERROR, "parameter upto must be >= from");

    if (from < 0)
        elog(ERROR, "parameter from must be >= 0");

    %funcprefix%_pairs_init(creator, up_to - from + 1);

    for (index1 = from; index1 <= up_to; ++index1)
    {
        %funcprefix%_pairs_insert(creator, index1, fill_with);
    }

    FINALIZE_%macropostfix%(result, creator);
    PG_RETURN_POINTER(result);
}

