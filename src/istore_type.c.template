/*
 * Sum the values of a %typename%
 */
PG_FUNCTION_INFO_V1(%funcprefix%_sum_up);
Datum %funcprefix%_sum_up(PG_FUNCTION_ARGS)
{
    %typename% *    is;
    %typename%Pair *pairs;
    int64          result;
    int            index;
    int32          end_key;

    is     = PG_GETARG_%macropostfix%(0);
    pairs  = FIRST_PAIR(is, %typename%Pair);
    result = 0;
    index  = 0;

    if (is->len == 0)
        PG_RETURN_INT64(0);

    if (PG_NARGS() == 1)
    {
        while (index < is->len)
            result = DirectFunctionCall2(int8pl, result, pairs[index++].val);
    }
    else
    {
        end_key = PG_GETARG_INT32(1) > pairs[is->len - 1].key ? pairs[is->len - 1].key : PG_GETARG_INT32(1);
        while (index < is->len && pairs[index].key <= end_key)
            result = DirectFunctionCall2(int8pl, result, pairs[index++].val);
    }

    PG_RETURN_INT64(result);
}

/*
 * Binary search the key in the %typename%
 */
%typename%Pair *
%funcprefix%_find(%typename% *is, int32 key, int *off_out)
{
    %typename%Pair *pairs  = FIRST_PAIR(is, %typename%Pair);
    %typename%Pair *result = NULL;
    int            low    = 0;
    int            max    = is->len;
    int            mid    = 0;
    while (low < max)
    {
        mid = low + (max - low) / 2;
        if (key < pairs[mid].key)
            max = mid;
        else if (key > pairs[mid].key)
            low = mid + 1;
        else
        {
            result = FIRST_PAIR(is, %typename%Pair) + mid;
            if (off_out)
                *off_out = mid;
            break;
        }
    }
    return result;
}

